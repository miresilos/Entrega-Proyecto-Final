<div class="container text-center my-3">
  
  <div class="header d-flex justify-content-between">
    <button onclick="location.href='/api/productos'" style="padding: 12px; border: 1px solid #000; border-radius: 100%; background: transparent;"><h1>HOME</h1></button>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="background-color: transparent; color:#000; border: none;">
        <img src={{data.imgUrl}} alt="avatar" style="width: 100px; max-height: 80px; border-radius: 100%;"/>
      </button>
      <ul class="dropdown-menu">
        <li>
          <button
            class="dropdown-item"
            onclick="location.href='/api/perfil'"
          >
            Perfil
          </button>
        </li>
        <li>
          <button
            class="dropdown-item"
            onclick="location.href='/api/carrito'"
          >
            Carrito
          </button>
        </li>
        <li>
          <button
              class="dropdown-item"
              onclick="location.href='/api/chat'"
          >
            Chat
          </button>
        </li>
        <li>
          <button
            class="dropdown-item"
            onclick="location.href='/api/logout'"
          >
            Salir
          </button>
        </li>
      </ul>
    </div>
  </div>
    
  <div class="container mt-5">
    <div class="row">
      {{#each productData}}
        <div class="card d-flex flex-column" style="max-width: 400px; margin-left: 30px; margin-bottom: 30px;">
          <strong>{{title}}</strong>
          <img class="img-thumbnail" style="max-height: 200px; width: 100%;" src="{{thumbnail}}" />
          <div class="d-flex justify-content-between align-items-center">
            <span>${{price}}</span>
            <button 
              class="btn btn-success btn-sm my-3" 
              id="addToCart{{_id}}" 
              onclick="addToCartListener(this.id)" 
              data-productid={{_id}} 
              data-userid={{../data._id}}
            >
              Agregar al carrito
            </button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>